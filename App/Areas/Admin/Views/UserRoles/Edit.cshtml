@using Microsoft.AspNetCore.Identity
@model App.ViewModels.ChangeRoleViewModel

@{
    ViewData["Title"] = "Управление ролями пользователя";
}

<h1>Управление ролями пользователя</h1>
<h4>@Model.UserEmail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="@Model.UserId" />
            <div class="form-group">
                @foreach (var role in Model.AllRoles)
                {
                    <input
                        type="checkbox"
                        name="roles"
                        value="@role.Name"
                        @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "")
                    />@role.Name<br />
                 }
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку пользователей</a>
</div>
