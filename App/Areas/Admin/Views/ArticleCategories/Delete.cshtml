@model App.Models.ArticleCategory

@{
    ViewData["Title"] = "Удаление категории";
}

<h1>Удаление категории</h1>
<h3>Вы действительно хотите удалить эту категорию?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Название</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку категорий</a>
    </form>
</div>
