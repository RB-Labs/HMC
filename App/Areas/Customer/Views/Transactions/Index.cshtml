@model IEnumerable<App.Models.Transaction>

@{
    ViewData["Title"] = "Список транзакций";
}

<h1>Список моих транзакций</h1>
<p>
    <a asp-action="Create">Создать новую транзакцию</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Значение</th>
            <th>Описание</th>
            <th>Дата создания</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <h4>Мой текущий баланс: @ViewBag.Balance</h4>
</p>